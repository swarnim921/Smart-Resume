pipeline {
    agent any
    
    tools {
        maven 'Maven-3.9'
        jdk 'JDK-21'
    }
    
    environment {
        EC2_HOST = credentials('talentsync-ec2-host')
        MONGODB_URI = credentials('mongodb-uri1')
        JWT_SECRET = credentials('jwt-secret1')
        GOOGLE_CLIENT_ID = credentials('google-client-id1')
        GOOGLE_CLIENT_SECRET = credentials('google-client-secret1')
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                sh '''
                    export JAVA_HOME=/var/lib/jenkins/tools/hudson.model.JDK/JDK-21/jdk-21.0.5+11
                    export PATH=$JAVA_HOME/bin:$PATH
                    mvn clean package -DskipTests
                '''
            }
        }
        
        stage('Test') {
            steps {
                sh '''
                    export JAVA_HOME=/var/lib/jenkins/tools/hudson.model.JDK/JDK-21/jdk-21.0.5+11
                    export PATH=$JAVA_HOME/bin:$PATH
                    mvn test
                '''
            }
        }
        
        stage('Deploy to EC2') {
            steps {
                withCredentials([sshUserPrivateKey(credentialsId: 'ec2-ssh-key', keyFileVariable: 'SSH_KEY_FILE', usernameVariable: 'SSH_USER')]) {
                    sh '''
                        scp -i ${SSH_KEY_FILE} -o StrictHostKeyChecking=no \
                            target/*.jar ec2-user@${EC2_HOST}:/home/ec2-user/talentsync-backend/
                        
                        ssh -i ${SSH_KEY_FILE} -o StrictHostKeyChecking=no ec2-user@${EC2_HOST} \
                            "sudo systemctl restart talentsync-backend"
                    '''
                }
            }
        }
    }
    
    post {
        success {
            echo '✅ Backend deployed successfully!'
        }
        failure {
            echo '❌ Deployment failed!'
        }
    }
}
