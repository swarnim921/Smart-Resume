{
  "info": {
    "name": "Smart Resume - Clean",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Clean Postman collection without scripts or injected headers. Use an environment with `base_url` and `token` variables."
  },
  "item": [
    {
      "name": "Signup",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"name\": \"Test User\", \"email\": \"test@example.com\", \"password\": \"pass123\"}"
        },
        "url": {
          "raw": "{{base_url}}/api/auth/signup",
          "host": ["{{base_url}}"],
          "path": ["api","auth","signup"]
        }
      }
    },
    {
      "name": "Signin",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"email\": \"test@example.com\", \"password\": \"pass123\"}"
        },
        "url": {
          "raw": "{{base_url}}/api/auth/signin",
          "host": ["{{base_url}}"],
          "path": ["api","auth","signin"]
        }
      }
    },
    {
      "name": "Upload Resume (requires token)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "file",
              "type": "file",
              "src": ""
            }
          ]
        },
        "url": {
          "raw": "{{base_url}}/api/resumes/upload",
          "host": ["{{base_url}}"],
          "path": ["api","resumes","upload"]
        }
      }
    },
    {
      "name": "Download Resume",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/resumes/:id/download",
          "host": ["{{base_url}}"],
          "path": ["api","resumes",":id","download"]
        }
      }
    },
    {
      "name": "List Users (Admin)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/admin/users",
          "host": ["{{base_url}}"],
          "path": ["api","admin","users"]
        }
      }
    }
  ]
}
